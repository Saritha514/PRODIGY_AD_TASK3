<body>
    <button class="theme-toggle" onclick="toggleTheme()" title="Toggle Theme">
        <i class="uil uil-moon"></i>
    </button>
    
    <div class="app-container">
        <div class="header">
            <h1>⏱️ Pro Stopwatch</h1>
        </div>
        <div class="card">
            <div class="time-display">
                <div class="time" id="timeDisplay">00:00:00.00</div>
                <div class="status" id="statusDisplay">Ready</div>
            </div>
            <div class="controls">
                <button class="btn start" id="startBtn" onclick="handleStart()">
                    <i class="uil uil-play"></i> Start
                </button>
                <button class="btn pause" id="pauseBtn" onclick="handlePause()" disabled>
                    <i class="uil uil-pause"></i> Pause
                </button>
                <button class="btn reset" id="resetBtn" onclick="resetStopwatch()">
                    <i class="uil uil-refresh"></i> Reset
                </button>
            </div>
            <ul class="laps" id="lapsList">
                <li class="empty-laps">
                    <i class="uil uil-stopwatch" style="font-size: 48px; opacity: 0.3; display: block; margin-bottom: 12px;"></i>
                    Press LAP when running
                </li>
            </ul>
        </div>
    </div>
    
    <button class="lap-btn" id="lapBtn" onclick="recordLap()" disabled title="Lap (L key)">
        <i class="uil uil-layers"></i>
    </button>

    <script>
        let startTime = 0;
        let lastLapTime = 0;
        let elapsedTime = 0;
        let interval = null;
        let isRunning = false;
        let laps = [];

        const timeDisplay = document.getElementById('timeDisplay');
        const statusDisplay = document.getElementById('statusDisplay');
        const startBtn = document.getElementById('startBtn');
        const pauseBtn = document.getElementById('pauseBtn');
        const resetBtn = document.getElementById('resetBtn');
        const lapBtn = document.getElementById('lapBtn');
        const lapsList = document.getElementById('lapsList');

        function formatTime(ms) {
            const hours = Math.floor(ms / 3600000);
            const minutes = Math.floor((ms % 3600000) / 60000);
            const seconds = Math.floor((ms % 60000) / 1000);
            const milliseconds = Math.floor((ms % 1000) / 10);
            return `${hours.toString().padStart(2, '0')}:${
                minutes.toString().padStart(2, '0')}:${
                seconds.toString().padStart(2, '0')}.${
                milliseconds.toString().padStart(2, '0')}`;
        }

        function updateDisplay() {
            const currentTime = Date.now();
            const totalElapsed = elapsedTime + (isRunning ? currentTime - startTime : 0);
            timeDisplay.textContent = formatTime(totalElapsed);
        }

        function handleStart() {
            if (isRunning) return;
            
            isRunning = true;
            startTime = Date.now() - elapsedTime;
            interval = setInterval(updateDisplay, 10);
            
            startBtn.disabled = true;
            pauseBtn.disabled = false;
            lapBtn.disabled = false;
            statusDisplay.textContent = 'Running';
            startBtn.innerHTML = '<i class="uil uil-pause"></i> Running';
        }

        function handlePause() {
            if (!isRunning) return;
            
            isRunning = false;
            elapsedTime = Date.now() - startTime;
            clearInterval(interval);
            
            pauseBtn.disabled = true;
            startBtn.disabled = false;
            startBtn.innerHTML = '<i class="uil uil-play"></i> Resume';
            statusDisplay.textContent = 'Paused';
        }

        function resetStopwatch() {
            isRunning = false;
            clearInterval(interval);
            elapsedTime = 0;
            startTime = 0;
            lastLapTime = 0;
            laps = [];
            
            timeDisplay.textContent = '00:00:00.00';
            statusDisplay.textContent = 'Ready';
            
            startBtn.disabled = false;
            startBtn.innerHTML = '<i class="uil uil-play"></i> Start';
            pauseBtn.disabled = true;
            lapBtn.disabled = true;
            
            lapsList.innerHTML = `
                <li class="empty-laps">
                    <i class="uil uil-stopwatch" style="font-size: 48px; opacity: 0.3; display: block; margin-bottom: 12px;"></i>
                    Press LAP when running
                </li>
            `;
        }

        function recordLap() {
            if (!isRunning) return;
            
            const currentTime = Date.now();
            const totalElapsed = elapsedTime + (currentTime - startTime);
            const lapInterval = totalElapsed - lastLapTime;
            
            laps.unshift({
                number: laps.length + 1,
                total: formatTime(totalElapsed),
                interval: formatTime(lapInterval)
            });
            
            lastLapTime = totalElapsed;
            
            // Update laps display
            lapsList.innerHTML = laps.map(lap => `
                <li class="lap-item">
                    <span class="lap-num">Lap ${lap.number}</span>
                    <span class="lap-total">${lap.total}</span>
                    <span class="lap-interval">${lap.interval}</span>
                </li>
            `).join('') || `
                <li class="empty-laps">
                    <i class="uil uil-stopwatch" style="font-size: 48px; opacity: 0.3; display: block; margin-bottom: 12px;"></i>
                    Press LAP when running
                </li>
            `;
        }

        function toggleTheme() {
            document.body.dataset.theme = document.body.dataset.theme === 'dark' ? '' : 'dark';
        }

        // Keyboard shortcuts
        document.addEventListener('keydown', (e) => {
            if (e.code === 'Space' && !e.ctrlKey) {
                e.preventDefault();
                isRunning ? handlePause() : handleStart();
            }
            if (e.code === 'KeyL' && !lapBtn.disabled) {
                recordLap();
            }
            if (e.code === 'KeyR') {
                resetStopwatch();
            }
        });

        updateDisplay(); // Initial display
    </script>
</body>
</html>
